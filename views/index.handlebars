<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center">
			<img src="/assets/img/hamburger.png"/>
			<h1> Eat-Da-Burger!</h1>
		</div>
		<div class="col-xs-6 text-center">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				</div>
				<div class="col-xs-3 text-center">
					<form class="devour-form">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}">
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" id="text-enter-button">Submit</button>
			</form>
			<p>Add a Burger!</p>
		</div>
	</div>
</div>